{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noEmit": true,
		"exactOptionalPropertyTypes": true,
		"verbatimModuleSyntax": true,
		"types": ["node", "vitest"]
	},
	"include": ["src", "tests", "tsup.config.ts"]
}
